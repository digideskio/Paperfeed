

@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p class="tekst">
    Her skal admin enkelt ha muligheten til å fjerne admin-rettigheter for andre administratorer. 

    Det skal også være mulighet for admin å gi/fjerne andre roller i tillegg til admin-rollen. 
    Det kan f.eks. være praktisk å gi brukeren en rolle som 'Designer' slik at vedkommende bare har tilgang
    til filer som er front-end.
    <br />
    <br />
    Soon to come...
</p>


<div class="rolesIndex">
    <form method="get" action="@Url.Action("Create", "Admin")">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
            Create New
        </button>
    </form>
</div>

<!-- List with avatar and controls -->
<style>
    .demo-list-control {
        width: 300px;
    }

    .demo-list-radio {
        display: inline;
    }
</style>


@using (Html.BeginForm("Scraper", "Admin", FormMethod.Post))
{

    <ul class="demo-list-control mdl-list">
        <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
                <i class="material-icons  mdl-list__item-avatar">person</i>
                Bob Odenkirk
            </span>

            <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox">
                <input type="checkbox" id="checkbox" class="mdl-checkbox__input" checked>
                <span class="mdl-checkbox__label"></span>
            </label>


            <div id="notification" class="mdl-js-snackbar mdl-snackbar">
                <div class="mdl-snackbar__text"></div>
                <button class="mdl-snackbar__action" type="button"></button>
            </div>


        </li>
    </ul>
}


<script>
(function() {
  'use strict';
  var snackbarContainer = document.querySelector('#notification');
  var showSnackbarButton = document.querySelector('#checkbox');

  showSnackbarButton.addEventListener('click', function() {
    'use strict';
    var data = {
      message: 'Rolle forandret seg.',
      timeout: 2000
    };
    snackbarContainer.MaterialSnackbar.showSnackbar(data);

    if ($("#list-switch").is(':checked'))

        console.log("checked")
    else
        console.log("unchecked")
  });
}());
</script>