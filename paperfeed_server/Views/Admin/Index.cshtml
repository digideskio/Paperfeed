@model Paperfeed.Models.LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="https://code.getmdl.io/1.1.3/material.blue_grey-blue.min.css" rel="stylesheet"/>

</head>

<body>
<div class="mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell mdl-cell--1-col">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h1 class="mdl-card__title-text">Login</h1>
            </div>
            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
            {
                <div class="mdl-textfield mdl-js-textfield">
                    @Html.TextBoxFor(model => model.Email, new {@class = "mdl-textfield__input"})
                    @Html.LabelFor(model => model.Email, new {@class = "mdl-textfield__label"})
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                    @Html.PasswordFor(model => model.Password, new {@class = "mdl-textfield__input"})
                    @Html.LabelFor(model => model.Password, new {@class = "mdl-textfield__label"})
                </div>
                <div class="mdl-card__actions mdl-card--border">
                    <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Log in</button>
                </div>
            }
        </div>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>


<script type="text/javascript" src=@Url.Content("~/Scripts/material.min.js")></script>
</body>
</html>