<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paperfeed</title>
    <link href="@Url.Content("~/Styles/stylesheet.css")" rel="stylesheet"/>
    <link href="https://code.getmdl.io/1.1.3/material.blue_grey-blue.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="@Url.Content("~/Styles/adminstyle.css")" rel="stylesheet" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.0/Chart.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
</head>
<body>

<div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    <header class="demo-header mdl-layout__header mdl-color--grey-100 mdl-color-text--blue-grey-400">
        <div class="mdl-layout__header-row">
            <span class="mdl-layout-title">Backstage - Admin / @ViewBag.Title </span>
            <div class="mdl-layout-spacer"></div>

        </div>
    </header>
    <div class="demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-100">
        <header class="demo-drawer-header">
            <a href="@Url.Action("Home", "Admin")">
                <img id="homeButton" src="~/Content/Avatars/default3.png" alt="You" style="width:50px;height:50px;">
                <div class="mdl-tooltip" for="homeButton">Home</div>
            </a>
            <div class="demo-avatar-dropdown">
                <span>@User.Identity.Name</span>
                   
                <button id="accbtn" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                    <i class="material-icons" role="presentation">arrow_drop_down</i>
                    <span class="visuallyhidden">Account</span>
                </button>
                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="accbtn">
                    <li class="mdl-menu__item">Signout</li>
                </ul>
            </div>

        </header>
        <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">
            <a class="mdl-navigation__link" href="@Url.Action("Home", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">home</i>Home</a>
            <a class="mdl-navigation__link" href="@Url.Action("Index", "Users")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">face</i>Users</a>
            <a class="mdl-navigation__link" href="@Url.Action("Scraper", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">bug_report</i>Scraper</a>
            <a class="mdl-navigation__link" href="@Url.Action("Roles", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">border_color</i>Roles</a>
            @*<a class="mdl-navigation__link" href="@Url.Action("Database", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">cloud_circle</i>Database</a>*@
            <a class="mdl-navigation__link" href="@Url.Action("Stats", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">trending_up</i>Statistic</a>
            <a class="mdl-navigation__link" href="@Url.Action("Report", "Admin")"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">announcement</i>User Reports</a>
            <div class="mdl-layout-spacer"></div>

        </nav>
    </div>

@* Det som står i hvert av view-ene kommer her *@
    <main class="mdl-layout__content">
        <div class="mdl-grid demo-content">
            @RenderBody()
        </div>
    </main>
</div>




@Scripts.Render("~/bundles/scripts");

</body>

</html>